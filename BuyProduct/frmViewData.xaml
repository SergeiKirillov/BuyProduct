<Window x:Class="BuyProduct.frmViewData"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BuyProduct"
        mc:Ignorable="d"
        Title="Просмотр данных за выбранную дату с фильтрацией по классу(категории)" Height="450" Width="800">
    <StackPanel>
        <ComboBox x:Name="cmbViewCat" Width="300" Height="20"/>
        <DataGrid x:Name="dgViewClass"  Width="750" Height="100" Margin="5"></DataGrid>
        <Label Name="lblView" Margin="100 5 100 5" HorizontalAlignment="Center">Cписок покупок</Label>
        <DataGrid x:Name="dgViewProduct" Width="750" Height="200"></DataGrid>
    </StackPanel>
</Window>
